{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "noImplicitAny": true,
    "target": "es5",
    "module": "esnext",
    "strict": true,
    "jsx": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": false,
    "outDir": "./dist",
    "declaration": true,
    "baseUrl": ".",
    "rootDir": "src/",
    "paths": {
      "@components": [
        "./src/components/ComponentRender.tsx"
      ],
      "@polyfills": [
        "./client/polyfills.js"
      ]
    }
  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts",
    "src/**/*.js"
  ],
  "exclude": [
    "src/**/*.stories.*"
  ]
}
